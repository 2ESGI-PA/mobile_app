<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <!-- Header Section -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/primary_purple"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivNotesIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:contentDescription="Notes Icon"
        android:src="@drawable/ic_notes"
        app:layout_constraintBottom_toBottomOf="@+id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerBackground"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/tvNotesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Notes de réservation"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/headerBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivNotesIcon"
        app:layout_constraintTop_toTopOf="@+id/headerBackground" />

    <!-- Content Section -->
    <TextView
        android:id="@+id/tvNotesDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Ajoutez des informations supplémentaires concernant votre réservation."
        android:textColor="@color/secondary_purple"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilBookingNotes"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:hint="Ajouter des notes (optionnel)"
        app:boxStrokeColor="@color/primary_purple"
        app:counterEnabled="true"
        app:counterMaxLength="200"
        app:counterTextColor="@color/muted_green"
        app:hintTextColor="@color/primary_purple"
        app:layout_constraintTop_toBottomOf="@+id/tvNotesDescription">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBookingNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:gravity="top"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="4"
            android:textColor="@color/secondary_purple" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilBookingNotes">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelNotes"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Annuler"
            android:textColor="@color/secondary_purple" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accent_pink"
            android:text="Enregistrer"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>